menu "riscv64G Sepecfic Configuration"

depends on (OS_ARCH_riscv64G)

config INTERNAL_OS_PLATFORM_RISCV64G
    bool
    select INTERNAL_OS_BYTE_ORDER_LE
    select OS_OPTION_SMP if (OS_MAX_CORE_NUM != 1)

choice
    prompt "Cpu Type"

config INTERNAL_OS_RISCV64G
    bool "OS_RISCV64G"
    select INTERNAL_OS_PLATFORM_RISCV64G

endchoice

endmenu
